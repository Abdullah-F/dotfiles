#!/bin/sh

macvim_app="/Applications/MacVim.app/Contents/MacOS/Vim" # get it with `brew install macvim && brew linkapps`
macvim_homebrew="$(ls "/usr/local/Cellar/macvim/"*"/MacVim.app/Contents/bin/vim" | tail -1)"
systemvim="/usr/bin/vim"
selectedvim=""

if test -e "$macvim_app"; then
  selectedvim="$macvim_app"
elif test -e "$macvim_homebrew"; then
  selectedvim="$macvim_homebrew"
elif test -e "$systemvim"; then
  selectedvim="$systemvim"
else
  selectedvim="$(whereis vim)"
fi

exec "$selectedvim" "$@"
